@model Shopping.ViewModels.CreateBannerViewModel;

@{
    ViewData["Title"] = "Create Banner";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-5 justify-content-center align-items-center align-content-center">
        <h2 class="mt-5 row  justify-content-center ">Banner</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3 ml-4 w-50">
                <label for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" id="Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- SubTitle -->
            <div class="mb-3 ml-4 w-50">
                <label for="SubTitle" class="form-label">SubTitle</label>
                <input asp-for="SubTitle" class="form-control" id="SubTitle" />
                <span asp-validation-for="SubTitle" class="text-danger"></span>
            </div>

            <!-- ImageUrl -->
            <div class="mb-3 ml-4 w-50">
                <label for="ImageUrl" class="form-label">Banner Image</label>
                <input asp-for="ImageUrl" type="file" class="form-control" id="ImageUrl"/>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Link -->
            <div class="mb-3 ml-4 w-50">
                <label for="Link" class="form-label">Link</label>
                <input asp-for="Link" class="form-control" id="Link" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary ml-4 justify-content-center align-items-center align-content-center">Create Banner</button>
        </form>
    </div>
    <style>
        body{
            text-decoration:none;
        }
    </style>

    <!-- Validation Scripts -->
    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
